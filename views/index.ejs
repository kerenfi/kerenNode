<!DOCTYPE html>
<html>
  <head>
    <title>dashboard</title>
  <meta charset="utf-8"/>

    <link rel="shortcut icon" type="image/png" href="../public/images/favicon-16x16.png" />
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css" />
    <link
            href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
            rel="stylesheet" type="text/css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
  </head>
<body>
<div ng-app="shapes-wrappper" id="wrapper">
  <div ng-controller="shape-ctrl">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/" id="brand">Shape Dashboard</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li><a ng-click="addShape()"><i class="fa fa-plus"></i> Add Shape</a></li>
          <li><a ng-click="playAnime()"><i class="fa fa-play" data-anime="stop"></i> Play Anime</a></li>
        </ul>
      </div>
    </nav>
    <div class="">
      <div id="drawing-section" class="col-md-8 box">
        <canvas id="canvas" width="500" height="500"></canvas>
      </div>
      <div id="latest-shape" class="col-xs-2 col-lg-2 box">
        <hr><h2 class="intro-text text-center">latest-shape:</h2><hr>
        <div class="form-group">
          <label for="type">Shape type</label>
          <span id="type"> {{ type }}</span></div>
        <div class="form-group">
          <label for="shapePos">Shape position</label>
        <span id="position"> [ {{ x }} , {{ y }} ]</span></div>
        <div class="form-group">
          <label for="size">Shape Size</label>
          <span id="size"> {{ shapesize }}</span></div>
      </div>
      <div id="new-shape-form" class="col-md-3 box">
        <form novalidate id="add-form">
            <hr><h4 class="intro-text text-center">add new shape:</h4><hr>
          <div class="col-md-8">
            <label for="flip-min">Shape Type:</label>
            <select name="shapeType"  class="form-control" id="flip-min"  ng-model="type">
              <option value="circle">circle</option>
              <option value="rectangle">rectangle</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="x-coord">X-coord:</label>
            <input type="number" class="form-control" id="x-coord" name="xCoord" ng-model="x" min="0">
          </div>
          <div class="col-md-6">
            <label for="y-coord">Y-coord:</label>
            <input type="number" class="form-control" id="y-coord" name="yCoord" ng-model="y" ng-model="x" min="0">
          </div>
          <div class="col-md-6">
            <label for="size">Size:</label>
            <input type="number" class="form-control" id="size" name="shapeSize" ng-model="shapesize" ng-model="x" min="0" max="50">
          </div>
          <div class="form-group col-md-8" style="padding-top:20px">
            <button id="add-button" class="btn btn-primary btn-block"  ng-click="addNewShape()">ADD</button>
          </div>
        </form>
      </div>
      </div>
    </div>
</div>

<script src="../public/javascripts/dashboard.js"></script>
</body>
</html>
